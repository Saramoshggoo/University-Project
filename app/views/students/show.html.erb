<div class="row sign-up-form">
      <div class="col s6 m6">
        <div class="card grey darken-1 ">
            <div class="card-content white-text">
                    <span class="card-title"> Name: <%=@student.name%></span>
                    <span > Email<%=@student.email%></span>
                    <p>Course Enrollments :
                    <%if @student.courses.empty? %>
                    none
                    <%else%>
                    <ul>
                    <%@student.courses.each do |course|%>
                   <li><%=course.name%></li>
                   <%end%>
                   </ul>
                  <%end%>
                  </p>
                  
                  <p> <%=link_to "back", students_path%></p>
            </div>
         
        </div>
        <%if current_user == @student%>
           <%=link_to '<i class="material-icons right">create</i> Edit your Profile'.html_safe,edit_student_path(@student.id) ,class:"wave-effect waves-light btn"%>
        <%end%>
    </div>
   
</div>